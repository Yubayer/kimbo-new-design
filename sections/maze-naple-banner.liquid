<style>
  .section-container--{{ section.id }}{
    margin-top: {{ section.settings.margin_top | append:'px' }};
    margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
    padding-top: {{ section.settings.padding_top | append:'px' }};
    padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
    overflow: hidden;
  }


  @media screen and (max-width: 768px){
    .section-container--{{ section.id }}{
      margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
      margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
      padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
      padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
    }

  }
  .section-wrapper--{{ section.id }}{
    position: relative;
    video.banner--video--mobile.mobile-only {
        width: 100%;
        display:none;
        @media(max-width: 768px){
          display:block;
        }
      
    }
    .banner--video.desktop-only {
      width: 100%;
      display: block;
      @media(max-width: 768px){
        display:none;
      }
    }
    .video-wrapper{
      position: relative;

        h1{
            position: absolute;
            top: 40%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-weight: 500;
            font-size: 58px;
            line-height: 70px;
            color: #fff;
            text-align: center;
            @media(max-width: 768px){
              font-size: 28px;
              line-height: 40px;
              width: 300px;
            }
      }
        svg{
            position: absolute;
            top: 55%;
            left: 50%;
            transform: translate(-50%, -50%);
            @media(max-width:768px){
                  max-width: 50px;
                  height: auto;
            }

      }
    }
    .content-wrapper{
      background-color: #dfe3e8;
      p {
          text-align: center;
          padding-block: 35px;
          font-size: 18px;
          line-height: 26px;
          letter-spacing: 0px;
          @media(max-width:768px){
              font-size: 14px;
              line-height: 20px;
              width: 80%;
              margin: auto;
          }
      }
    }
  }
</style>
<section class="section-container--{{ section.id }}">
  <div class="section-wrapper--{{ section.id }}">
    <div class="video-wrapper">
      {{ section.settings.video | video_tag: class: 'banner--video desktop-only',  autoplay: true, loop: true, muted: true, controls: true  }}
      {{ section.settings.video_mobile | video_tag: class: 'banner--video--mobile mobile-only', autoplay: true, loop: true, muted: true, controls: true }}

      <h1>
        {{ section.settings.title }}
      </h1>
      
    </div>
    <div class="content-wrapper">
      <p>{{ section.settings.content }}</p>
    </div>
  </div>
</section>

