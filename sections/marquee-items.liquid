{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: #3E1E1D;
    overflow: hidden;
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  .wrapper-{{ id }} .swiper{
    overflow: visible;
  }
  .wrapper-{{ id }} .swiper-wrapper {
    transition-timing-function: linear;
  }
  .wrapper-{{ id }} .swiper-slide{
    width: max-content;
  }
  .marquee__item{
    display: flex;
    align-items: center;
    gap: 32px;
  }
  .marquee__item img{
    max-width: 75px;
    height: auto;
    object-fit: cover;
  }
  .marquee__item h4{
    color: #FFF;
    font-size: 28px;
    line-height: 28px; /* 100% */
    letter-spacing: -0.56px;
    margin: 0;
  }

  @media screen and (max-width: 768px){
    .marquee__item{
      gap: 12px;
    }
    .marquee__item img{
      max-width: 45px;
    }
    .marquee__item h4{
      font-size: 16px;
      line-height: 20px; /* 100% */
      letter-spacing: 0.5px;
    }
  }
</style>


<div class="sec-{{ id }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}>
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="swiper">
        <div class="swiper-wrapper">
          {% for i in (1..5) %}
            {% for block in section.blocks %}
              <div class="swiper-slide">
                <div class="marquee__item">
                  {% if block.settings.image %}
                    {{ block.settings.image | image_url: width: 75 | image_tag }}
                  {% endif %}
                  {% if block.settings.title != blank %}
                    <h4>{{ block.settings.title }}</h4>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", (event) => {
    new Swiper(".wrapper-{{ id }} .swiper", {
      slidesPerView: 'auto',
      spaceBetween: 24,
      speed: 5000,
      loop: true,
      autoplay: {
        delay: 1,
        disableOnInteraction: false,
      },
      breakpoints: {
        768: {
          slidesPerView: 'auto',
          spaceBetween: 35,
        },
        1024: {
          slidesPerView: 'auto',
          spaceBetween: 56,
        },
      },
    })
  });
</script>

